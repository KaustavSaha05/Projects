{
    "compilerOptions": {
      "target": "esnext",
      "module": "Commonjs",
      "rootDir": "../",            // Your TypeScript files
      "outDir": "./dist",               // Compiled JavaScript output
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true
