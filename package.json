{
    "name": "movie-recommendation",
    "version": "1.0.0",
    "description": "AI-powered movie recommendation website",
    "main": "server/index.ts",
    "scripts": {
        "dev": "concurrently \"vite --config client/vite.config.ts\" \"nodemon --ext ts --exec npx tsx server/index.ts\"",
        "build:client": "vite build --config client/vite.config.ts",
        "build:server": "tsc --project server/tsconfig.json",
        "build": "npm run build:client && npm run build:server && npm run copy-shared",
        "copy-shared": "xcopy shared server\\dist\\shared /E /I /Y",
        "start:server": "node -r dotenv/config server/dist/index.js",
        "start:client": "vite preview --config client/vite.config.ts"
    },
    "dependencies": {
        "@hookform/resolvers": "^4.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-hover-card": "^1.1.6",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@tanstack/react-query": "^5.67.2",
        "@types/express-session": "^1.18.1",
        "@types/passport": "^1.0.17",
        "@types/passport-local": "^1.0.38",
        "@vitejs/plugin-react": "^4.3.4",
        "axios": "^1.5.0",
        "bcrypt": "^5.1.0",
        "class-variance-authority": "^0.7.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.40.0",
        "drizzle-zod": "^0.7.0",
        "express": "^4.18.2",
        "express-session": "^1.18.1",
        "framer-motion": "^12.4.10",
        "jsonwebtoken": "^9.0.0",
        "lucide-react": "^0.479.0",
        "memorystore": "^1.6.7",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.54.2",
        "react-query": "^3.39.3",
        "shadcn-ui": "^0.9.1",
        "wouter": "^3.6.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.17",
        "@types/node": "^20.17.24",
        "@types/react": "^18.2.17",
        "@types/react-dom": "^18.2.7",
        "@types/wouter": "^2.2.0",
        "concurrently": "^7.6.0",
        "cpx": "^1.5.0",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.1",
        "typescript": "^5.8.2",
        "vite": "^6.2.1"
    },
    "type": "commonjs"
}
